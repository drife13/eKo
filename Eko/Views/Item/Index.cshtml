@model List<Item>

<table class="table">
    <tr>
        <th>Owner</th>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Owner.UserName</td>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>Nothing for sale!</p>
}