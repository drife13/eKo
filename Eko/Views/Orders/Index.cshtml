@model List<Order>

<h2>Your Store</h2>

@if (Model.Count != 0)
{
    <table class="table">
        <tr>
            <th>Order</th>
            <th>Date</th>
        </tr>

        @foreach (Order order in Model)
        {
            <tr>
                <td><a asp-controller="Orders" asp-action="ViewOrder" asp-route-id="@order.ID">#@order.ID</a></td>
                <td>@order.OrderDate</td>
            </tr>
        }
    </table>
}
else
{
    <p>You haven't placed any orders!</p>
}