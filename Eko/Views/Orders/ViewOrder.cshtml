@model List<Order>

@if (Model.Count != 0)
{
    <h2>Order #@Model[0].ID</h2>

    <p>Order placed: @Model[0].OrderDate.ToString()</p>

    <table class="table">
        <tr>
            <th>Listing Title</th>
            <th>Price</th>
        </tr>

        @foreach (var item in Model[0].Items)
        {
            <tr>
                <td><a asp-controller="Items" asp-action="ViewItem" asp-route-id="@item.ID">@item.Title</a></td>
                <td>$@item.Price</td>
            </tr>
        }

        <tr>
            <th>TOTAL:</th>
            <th>$@Model[0].Total</th>
        </tr>
    </table>
}
else
{
    <p>ERROR: Invalid order number.</p>
}